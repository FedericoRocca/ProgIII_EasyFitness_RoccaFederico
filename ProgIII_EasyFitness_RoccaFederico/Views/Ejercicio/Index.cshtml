@model ProgIII_EasyFitness_RoccaFederico.Models.EjercicioModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEntrenador.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>EjercicioModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <div class="col-md2">
                    @Html.ActionLink("Nuevo", "Nuevo", "Ejercicio", null, new { @class = "btn btn-dark" })
                </div>
            </div>

            <div class="form-row" style="margin-top: 10px">
                <div class="col-md2">
                    <input type="submit" value="Buscar" class="btn btn-dark" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row" style="margin-top: 10px">
                <div class="col-md2">
                    @Html.ActionLink("Todos", "Todos", "Ejercicio", null, new { @class = "btn btn-dark" })
                </div>
            </div>

    </div>
}
